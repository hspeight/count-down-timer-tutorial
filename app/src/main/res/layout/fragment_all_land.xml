<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBarCircleYrs"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="86dp"
        android:layout_height="90dp"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/drawable_circle_dark_blue"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/drawable_circle_yellow"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textViewYrsLit"
        app:layout_constraintEnd_toStartOf="@+id/textViewDay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleDay"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewDay"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarCircleDay"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleDay"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleDay"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleDay" />

    <TextView
        android:id="@+id/textViewYrs"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarCircleYrs"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleYrs"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleYrs"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleYrs" />

    <ProgressBar
        android:id="@+id/progressBarCircleDay"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="86dp"
        android:layout_height="90dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/drawable_circle_dark_blue"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/drawable_circle_yellow"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/progressBarCircleHrs"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressBarCircleYrs"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleHrs"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBarCircleHrs"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="86dp"
        android:layout_height="90dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/drawable_circle_dark_blue"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/drawable_circle_yellow"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHrsLit"
        app:layout_constraintEnd_toStartOf="@+id/textViewMin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewDay"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleMin"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewHrs"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarCircleHrs"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleHrs"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleHrs"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleHrs" />

    <TextView
        android:id="@+id/textViewSec"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarCircleSec"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleSec"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleSec"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleSec" />

    <TextView
        android:id="@+id/textViewMin"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarCircleMin"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleMin"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleMin"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleMin" />

    <ProgressBar
        android:id="@+id/progressBarCircleSec"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="86dp"
        android:layout_height="90dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/drawable_circle_dark_blue"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/drawable_circle_yellow"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewMin" />

    <ProgressBar
        android:id="@+id/progressBarCircleMin"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="86dp"
        android:layout_height="90dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/drawable_circle_dark_blue"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/drawable_circle_yellow"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMinLit"
        app:layout_constraintEnd_toStartOf="@+id/textViewSec"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressBarCircleHrs"
        app:layout_constraintTop_toTopOf="@+id/progressBarCircleSec"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-1dp" />

    <TextView
        android:id="@+id/textViewSecLit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Secs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleSec"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleSec" />

    <TextView
        android:id="@+id/textViewMinLit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Mins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleMin"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleMin" />

    <TextView
        android:id="@+id/textViewHrsLit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Hours"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleHrs"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleHrs" />

    <TextView
        android:id="@+id/textViewDayLit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Days"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleDay"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleDay" />

    <TextView
        android:id="@+id/textViewYrsLit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Years"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircleYrs"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircleYrs" />

    <TextView
        android:id="@+id/txtAffirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="This is the affirmation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarCircleYrs"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/textViewYrs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/emmawatson" />

</android.support.constraint.ConstraintLayout>